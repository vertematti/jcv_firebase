{
  "collections": [
    {
      "name": "page",
      "label": "Páginas",
      "path": "src/pages",
      "format": "mdx",
      "ui": {
        "filename": { "readonly": true },
        "router": {
          "type": "function",
          "body": "return document._sys.relativePath.replace(/^src\\/pages\\//, '').replace(/\\/index\\.mdx$/, '/').replace(/\\.mdx$/, '');"
        }
      },
      "fields": [
        {
          "type": "string",
          "name": "title",
          "label": "Título",
          "isTitle": true,
          "required": true
        },
        {
          "type": "rich-text",
          "name": "body",
          "label": "Conteúdo",
          "isBody": true
        }
      ]
    }
  ]
}
