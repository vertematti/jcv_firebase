---
// src/pages/index.astro
// Redireciona / para /pt/ de forma est√°tica e segura
export const prerender = true;

const redirectTo = '/pt/';
---

<meta http-equiv="refresh" content={`0; url=${redirectTo}`} />
<script is:inline>
  // Redireciona imediatamente no client
  if (location.pathname === '/' || location.pathname === '') {
    location.replace('/pt/');
  }
</script>

<!-- Fallback para crawlers -->
<link rel="canonical" href="/pt/" />